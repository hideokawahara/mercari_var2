.header__inside
  .header__inside__main
    %h1.icon
      %a{ href: '/'}
        %img{ src: "assets/material/logo/logo.png" }
    .header__inside__main__search
      = form_with url: '#' do |form|
        = form.text_field :searchInput, placeholder: "キーワードから探す", class: "searchBox--input"
        -# = form.submit
        %button{ type: "submit"} 
          .searchBox__icon
            %img{ src: "assets/material/icon/icon-search 1.png"}
    %ul.resultLists
  .header__inside__nav
    %ul.leftPart
      %li.leftPart__item.leftPart__item--first
        :javascript
          function openMenu() {  
            target.classList.remove('displayNone')
          }
          function closeMenu() {           
            target.classList.add('displayNone')
          }
        %a#catBtn{href: "#", :onmouseout => "closeMenu()", :onmouseover => "openMenu()"} カテゴリー
        .tree.displayNone#target
          %ul.categoryTree{:onmouseout => "closeMenu()", :onmouseover => "openMenu()"}
            %li.categoryTree--item
              %a#1{:href => "#"} レディース
            %li.categoryTree--item
              %a#2{:href => "#"} メンズ
            %li.categoryTree--item
              %a#3{:href => "#"} ベビー・キッズ
            %li.categoryTree--item
              %a#4{:href => "#"} インテリア・住まい・小物
            %li.categoryTree--item
              %a#5{:href => "#"} 本・音楽・ゲーム
            %li.categoryTree--item
              %a#6{:href => "#"} おもちゃ・ホビー・グッズ
            %li.categoryTree--item
              %a#7{:href => "#"} コスメ・香水・美容
            %li.categoryTree--item
              %a#8{:href => "#"} 家電・スマホ・カメラ
            %li.categoryTree--item
              %a#9{:href => "#"} スポーツ・レジャー
            %li.categoryTree--item
              %a#10{:href => "#"} ハンドメイド
            %li.categoryTree--item
              %a#11{:href => "#"} チケット
            %li.categoryTree--item
              %a#12{:href => "#"} 自動車・オートバイ
            %li.categoryTree--item
