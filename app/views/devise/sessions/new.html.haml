.login
  %header.login__header
    %h1
      = link_to image_tag(asset_path("material/logo/logo.png")), '#'
  %main.login-main-part
    .panel
      .panel__no-account
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_user_registration_path
      = form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| 
        .login-form-inside
          .form-group
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-group__input-default", placeholder: "メールアドレス"
          .form-group
            = f.password_field :password, autocomplete: "current-password", class: "form-group__input-default", placeholder: "パスワード"
          %button.login-submit.btn-default.btn-red
            = f.submit "ログイン"